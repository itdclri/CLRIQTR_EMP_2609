@{
    ViewBag.Title = "Forgot Password";

    // Determine if the email was sent successfully to hide the form
    bool emailSentSuccessfully = ViewBag.Message != null && ViewBag.Message.Contains("A recovery email has been sent");
}

<style>
    /* Style copied from Registration page */
    .forgot-password-container {
        max-width: 450px;
        margin: 40px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
        box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
    }

        .forgot-password-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #2c3e50;
        }

    .form-group label {
        font-weight: 600;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        font-size: 1rem;
        background-color: #337AB7; /* Ensuring button color is set */
        border-color: #2e6da4;
    }

    .alert {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    /* Active link styling for the navbar */
    .navbar-nav .nav-link.active {
        font-weight: bold;
        color: #0d6efd;
    }
</style>

<nav class="navbar navbar-expand navbar-light bg-light mb-4">
    <div class="container">
        <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Registration", "Login")">Registration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Login")">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="@Url.Action("ForgotPassword", "Login")">Forgot Password</a>
            </li>
        </ul>
    </div>
</nav>

<div class="forgot-password-container">
    <h2>Forgot Your Password?</h2>

    @if (emailSentSuccessfully)
    {
        <div class="alert alert-success text-center">
            <p>@ViewBag.Message</p>
            <p>Please check your inbox.</p>
        </div>
    }
    else
    {
        <p class="text-center">No problem. Enter your employee number below and we will send you an email with your password.</p>

        if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Message
            </div>
        }

        <form action="@Url.Action("SendPasswordRecoveryEmail", "Login")" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                @*<label for="employeeNumber">Employee Number</label>*@
                <input type="text" name="employeeNumber" id="employeeNumber" class="form-control" placeholder="Enter your employee number" required />
            </div>

            <button type="submit" class="btn btn-primary">Send Recovery Email</button>
        </form>
    }

    <div class="back-link">
        <a href="@Url.Action("Index", "Login")">&larr; Back to Login</a>
    </div>
</div>