@{
    ViewData["Title"] = "Employee Login";
}

<nav class="navbar navbar-expand navbar-light bg-light mb-4">
    <div class="container">
        <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Registration", "Login")"> <i class="bi bi-person-plus-fill"></i> Registration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Login")"><i class="bi bi-box-arrow-in-right"></i> Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ForgotPassword", "Login")"><i class="bi bi-key-fill"></i> Forgot Password</a>
            </li>
        </ul>
    </div>
</nav>

<div class="login-container">
    <h2>
        <i class="bi bi-house-lock-fill"></i>
        Employee Login
    </h2>


    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <label for="username"> <i class="bi bi-person-badge"> </i>Employee Number</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <div class="form-group mb-4">
            <label for="password"><i class="bi bi-shield-lock-fill"></i> Password</label>
            <div class="password-wrapper">
                <input type="password"
                       id="password"
                       name="password"
                       class="form-control password-input" required />

                <button type="button" class="toggle-password-btn">
                    <i class="bi bi-eye-slash-fill toggle-password-icon"></i>
                </button>
            </div>
        </div>
        <button type="submit" class="btn btn-primary"> <i class="bi bi-box-arrow-in-right"></i> Login</button>
    }
</div>

<style>
    /* Copied and adapted from Registration page */
    .login-container {
        max-width: 450px;
        margin: 40px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
        box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #2c3e50;
        }

    .form-group label {
        font-weight: 600;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        font-size: 1rem;
    }

    .alert-danger {
        margin-bottom: 20px;
    }

    /* Active link styling for the navbar */
    .navbar-nav .nav-link.active {
        font-weight: bold;
        color: #0d6efd; /* Bootstrap primary color */
    }

    /* 2. ADDED REUSABLE CSS RULES */
    .password-wrapper {
        position: relative;
        width: 100%;
    }

    .password-input {
        padding-right: 45px;
    }

    .toggle-password-btn {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: #6c757d;
    }

    /* Hide the browser's default "eye" icon */
    .password-input::-ms-reveal {
        display: none;
    }

    .password-input::-webkit-reveal {
        display: none !important;
        -webkit-appearance: none !important;
    }
</style>

@section Scripts {
    <script>
    document.addEventListener("DOMContentLoaded", function () {

        // Find ALL toggle buttons on the page
        const allToggleButtons = document.querySelectorAll(".toggle-password-btn");

        // Loop through each button
        allToggleButtons.forEach(function (button) {

            button.addEventListener("click", function () {
                // Find the elements *related* to this specific button
                const wrapper = button.closest('.password-wrapper');
                const passwordInput = wrapper.querySelector(".password-input");
                const passwordIcon = wrapper.querySelector(".toggle-password-icon");

                // Toggle the type attribute
                const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
                passwordInput.setAttribute("type", type);

                // Toggle the icon
                if (type === "password") {
                    // Show the 'slashed' eye
                    passwordIcon.classList.remove("bi-eye-fill");
                    passwordIcon.classList.add("bi-eye-slash-fill");
                } else {
                    // Show the 'open' eye
                    passwordIcon.classList.remove("bi-eye-slash-fill");
                    passwordIcon.classList.add("bi-eye-fill");
                }
            });
        });
    });
    </script>
}