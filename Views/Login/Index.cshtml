@{
    ViewData["Title"] = "Employee Login";
}

<nav class="navbar navbar-expand navbar-light bg-light mb-4">
    <div class="container">
        <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Registration", "Login")">Registration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Login")">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ForgotPassword", "Login")">Forgot Password</a>
            </li>
        </ul>
    </div>
</nav>

<div class="login-container">
    <h2>Employee Login</h2>
  

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <label for="username">Employee Number</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <div class="form-group mb-4">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    }
</div>

<style>
    /* Copied and adapted from Registration page */
    .login-container {
        max-width: 450px;
        margin: 40px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
        box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #2c3e50;
        }

    .form-group label {
        font-weight: 600;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        font-size: 1rem;
    }

    .alert-danger {
        margin-bottom: 20px;
    }

    /* Active link styling for the navbar */
    .navbar-nav .nav-link.active {
        font-weight: bold;
        color: #0d6efd; /* Bootstrap primary color */
    }
</style>