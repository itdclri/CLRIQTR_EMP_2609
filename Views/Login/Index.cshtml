@{
    ViewData["Title"] = "Employee Login";
}

<!-- Horizontal Menu Bar -->
<nav class="navbar navbar-expand navbar-light bg-light mb-4">
    <div class="container">
        <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Registration", "Login")">Registration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Login")">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="https://admnquarters.clri.org/Forgotpwd/ForgotPassword" target="_blank" rel="noopener noreferrer">Forgot Password</a>
            </li>
        </ul>
    </div>
</nav>

<div class="login-container">
    <h2 class="login-title">Employee Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div class="form-group">
            <label for="empno">Employee Number</label>
            <input type="text" id="username" name="username" class="form-input" required />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-input" required />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    }
</div>

<style>
    /* Optional: Customize the menu bar and active link */
    .navbar-nav .nav-link.active {
        font-weight: bold;
        color: #0d6efd; /* Bootstrap primary color */
    }

    .login-container {
        max-width: 400px;
        margin: 0 auto;
    }

    .login-title {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }
</style>
