@{
    ViewBag.Title = "Home Page";
}

@* This section will display any success, warning, or error messages *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">@TempData["WarningMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="text-center py-5">
    <h1 class="display-4">Welcome to the Employee Quarters Portal</h1>
    
    <hr class="my-4">
    <div class="mt-4">
        <a class="btn btn-primary btn-lg mx-2" href="@Url.Action("Logout", "Login")" role="button">
            <i class="fas fa-plus-circle"></i> Logout
        </a>
        <a class="btn btn-secondary btn-lg mx-2" href="@Url.Action("ViewDrafts", "Employee")" role="button">
            <i class="fas fa-folder-open"></i> My Applications
        </a>
        
    </div>
</div>